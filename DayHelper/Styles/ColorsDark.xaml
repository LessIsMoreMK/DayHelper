<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DayHelper">

    <!-- Background color -->
    <Color x:Key="Background">#252422</Color>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>

    <!-- Surface color -->
    <Color x:Key="Surface">#403d39</Color>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>

    <!-- Primary color -->
    <Color x:Key="Primary">#eb5e28</Color>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>

    <!-- Secondary color -->
    <Color x:Key="Secondary">#219ebc</Color>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>

    <!-- On Background color -->
    <Color x:Key="OnBackground">#ccc5b9</Color>
    <SolidColorBrush x:Key="OnBackgroundBrush" Color="{StaticResource OnBackground}"/>

    <!-- On Surface color -->
    <Color x:Key="OnSurface">#fffcf2</Color>
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="{StaticResource OnSurface}"/>

    <!-- On Primary color -->
    <Color x:Key="OnPrimary">#fffcf2</Color>
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="{StaticResource OnPrimary}"/>

    <!-- On Secondary color -->
    <Color x:Key="OnSecondary">#252422</Color>
    <SolidColorBrush x:Key="OnSecondaryBrush" Color="{StaticResource OnSecondary}"/>

    <!-- Tasks Priority colors-->
    <Color x:Key="NotDefined">#ccc5b9</Color>
    <SolidColorBrush x:Key="NotDefinedBrush" Color="{StaticResource NotDefined}"/>
    <Color x:Key="Normal">#078500</Color>
    <SolidColorBrush x:Key="NormalBrush" Color="{StaticResource Normal}"/>
    <Color x:Key="Important">#ffcc00</Color>
    <SolidColorBrush x:Key="ImportantBrush" Color="{StaticResource Important}"/>
    <Color x:Key="Critical">#b80000</Color>
    <SolidColorBrush x:Key="CriticalBrush" Color="{StaticResource Critical}"/>
</ResourceDictionary>
<local:BaseDialogUserControl  x:Class="DayHelper.DialogMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DayHelper"
             mc:Ignorable="d" >
    <StackPanel>

        <TextBlock Text="{Binding Message}"
                   Padding="5"
                   Foreground="{DynamicResource SurfaceBrush}"/>

        <Button Content="{Binding OkText}"  
                    Command="{Binding CloseCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:BaseDialogUserControl}}}"
                    HorizontalAlignment="Center"/>
    </StackPanel>
</local:BaseDialogUserControl >

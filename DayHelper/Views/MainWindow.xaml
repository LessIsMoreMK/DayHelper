<Window x:Class="DayHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DayHelper"
        mc:Ignorable="d"
        Title="Day Helper" Height="450" Width="800">


    <!-- MAIN GRID -->
    <Grid Background="{StaticResource LightThemeBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDE MENU GRID -->
        <Grid Grid.Column="0" Background="{StaticResource LightThemeSurfaceBrush}" Grid.RowSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <Label Content="Username" Grid.Row="0"/>
                <Label Content="{StaticResource FontAwesomeMenuIcon}" Grid.Row="1"/>
                <Button Content="{StaticResource FontAwesomeCalendarIcon}" Grid.Row="1" FontSize="30"/>
                <Label Content="Listy" Grid.Row="2"/>
                <Label Content="Pomodoro" Grid.Row="3"/>
                <Label Content="Ukończone" Grid.Row="4"/>
                <Label Content="Kosz" Grid.Row="5"/>

                <Button Grid.Row="6"
                Style="{StaticResource RoundedButton}"
                FontFamily="{StaticResource FontAwesome}"
                Content="{StaticResource FontAwesomeCalendarIcon}"
                Command="{Binding StartCommand}"
                Width="50"
                HorizontalAlignment="right"/>

            </Grid>

        </Grid>

    </Grid>
</Window>

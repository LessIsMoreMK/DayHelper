<local:BasePage x:TypeArguments="local:TaskViewModel" x:Class="DayHelper.TaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DayHelper"
      mc:Ignorable="d"         
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>

        <DataGrid ItemsSource="{Binding Tasks}"
                  Style="{StaticResource MainDataGrid}" 
                  CellStyle="{StaticResource MainDataGridCell}"
                  RowStyle="{StaticResource MainDataGridRow}">

            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding Finished}" />
                <DataGridTextColumn  Binding="{Binding Content}" MinWidth="250" Width="*"/>
                <DataGridTextColumn  Binding="{Binding Difficulty}"/>
                <DataGridTextColumn  Binding="{Binding Priority}"/>
                <DataGridTextColumn  Binding="{Binding DateCreated}" />
                <DataGridTextColumn  Binding="{Binding DateToFinish}"/>

                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource ActionButton}"
                                    FontFamily="{StaticResource FontAwesome}"
                                    FontSize="{StaticResource FontSizeLarge}"
                                    Content="{StaticResource FontAwesomeSaveIcon}"
                                    Width="30"
                                    Height="30"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource ActionButton}"
                                    FontFamily="{StaticResource FontAwesome}"
                                    FontSize="{StaticResource FontSizeLarge}"
                                    Content="{StaticResource FontAwesomeDeleteIcon}"
                                    Width="30"
                                    Height="30"
                                    Margin="0 0 15 0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>


        </DataGrid>
    </Grid>
</local:BasePage>
